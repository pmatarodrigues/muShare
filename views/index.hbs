<link rel='stylesheet' href='/stylesheets/navbar.css' />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="http://localhost/muShare/verificacoes/ver.js"></script>

<div class="navbar">
    <div class="navbar-left">
        <h1 class="title">muShare</h1>
    </div>
</div>

<div class="account-part">
    <form action="/login" method="POST">
        <div class="container-accounts" id="login">
            <div class="front-face">
                <h1>
                    Welcome back!
                </h1>
                <h2 style="color: white; opacity: 0.4">
                    Post your favorite musics with your best friends.
                </h2>
            </div>
            <div class="back-face">
                <h1 class="login"> Login </h1>   
                <p class="logout" id="changeToRegister" onclick="changeToRegister()" style="margin-top: -20px; font-size: 15px;">or Create Account</p>
                <div>
                    <br>
                    <input type="text" placeholder="Enter username" name="username" id="username" required>
                    <p id="username-doesnt-exist" class="warning-login"></p>
                </div>
                <div>
                    <br>
                    <input type="password" placeholder="Enter password" name="password" required>
                    <p id="wrong-password" class="warning-login"></p>
                </div>
                <br>
                <input id="login-button" type="submit" value="Login">
                <br>
            </div>
        </div>
    </form>
    <form action="/create" method="POST" id="formCreate">
        <div class="container-accounts" id="register">
            <div class="back-face">
                <h1 class="login">Create Account </h1>
                <p class="logout" id="changeToLogin" onclick="changeToLogin()" style="margin-top: -20px; font-size: 15px;">or Login</p>
                <div>
                    <br>
                    <input type="text" placeholder="Enter username" name="username" required>
                    <p id="username-in-use" class="warning-login"></p>
                </div>
                <div>
                    <br>
                    <input type="password" placeholder="Enter password" name="password" id="password" required>
                    <p id='pass' class="warning-login"></p>
                </div>
                <div>
                    <br>
                    <input type="password" placeholder="Confirm password" name="confirmPassword" id="confPassword" required>
                    <p id="different-passwords" class="warning-login"></p>
                </div>
                <input id="create-account-button" type="submit" value="Create Account" onclick="return validateCreate()">  
                <br>
            </div>
            <div class="front-face">
                <h1>
                    Join us!
                </h1>
                <h2 style="color: white; opacity: 0.4">
                    Post your favorite musics with your best friends.
                </h2>
            </div>            
        </div>
    </form>
</div>


<script>
    function changeToRegister(){
        $('#login').css('display', 'none');
        $('#register').css('display', 'flex ');
    }

    function changeToLogin(){
        $('#register').css('display', 'none');
        $('#login').css('display', 'flex');
    }
</script>