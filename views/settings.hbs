<link rel='stylesheet' href='/stylesheets/navbar.css' />
<link rel='stylesheet' href='/stylesheets/style.css' />



<div class="navbar">

    <div class="navbar-left">
        <h1 class="title">{{title}}</h1>
    </div>
    <div class="navbar-right">
        <button type="submit" id="toggleUploadModalButton" class="upload">Share</button>
        <div class="dropdown">
            <button class="logout">User</button>
            <div class="dropdown-content">
                <form action="/settings" method="GET">
                    <button class="logout">Settings</button>
                </form>
                <form action="/logout" method="post">
                    <button type="submit" name="logout" value="Logout" class="logout">Logout</button>
                </form>
            </div>
        </div>
    </div>
</div>


<div class="settings-box">

    <h1>Settings</h1>

    <form action="/changeSettings" method="POST">
        <input type="text" placeholder="Username" name="username" style="margin-bottom: 50px">
        <br>
        <input type="password" placeholder="Password" name="password" style="margin-bottom: 50px">
        <br>
        <input type="password" placeholder="Confirm Password" name="confirmPassword" style="margin-bottom: 50px">
        <br>
        <button type="submit" class="upload">Save</button>
    </form>

</div>
