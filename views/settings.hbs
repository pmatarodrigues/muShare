<link rel='stylesheet' href='/stylesheets/navbar.css' />
<link rel='stylesheet' href='/stylesheets/style.css' />



<div class="navbar">

    <div class="navbar-left">
        <h1 class="title">{{title}}</h1>
    </div>
    <div class="navbar-right">
        <p class="logout">{{user.username}}</p>
        <img src="images/profilepics/{{user.pic}}" class="profile-pic" alt="userPic">        
        <a type="submit" href="/" class="upload" style="height: 40px">Return to Home</a>        
    </div>
</div>


<div class="settings-box">

    <h1>Settings</h1>

    <form action="/uploadProfilePic" method="POST" enctype="multipart/form-data">
        <p style="color: white">Choose profile picture</p>
        <input type="file" title="Select profile picture" accept="" name="pic" style="margin-bottom: 50px; width: 30%" class="upload">
        <button type="submit" class="upload">Upload</button>        
        <br>
    </form>
    <form action="/changeSettings" method="POST">
        <input type="password" placeholder="Password" name="password" style="margin-bottom: 50px">
        <br>
        <input type="password" placeholder="Confirm Password" name="confirmPassword" style="margin-bottom: 50px">
        <br>
        <button type="submit" class="upload">Save</button>        
    </form>
    <br>
    <br>
    <a class="logout" href="/">Return to Home</a>

</div>
